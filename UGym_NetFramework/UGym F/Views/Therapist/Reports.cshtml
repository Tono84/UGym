@{
    Layout = "~/Views/Shared/_Therapist_layout.cshtml";
}

<div class="container">
    <h2>Crear Informe</h2>
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Subir Informe</span>
                    <form>
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>Seleccionar</span>
                                <input type="file" id="archivoInforme">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                        <button class="btn waves-effect waves-light" type="button" name="action" id="guardarBtn">Subir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modal1" class="modal modal-fixed-footer" style="max-width: 15%; max-height: 15%; padding: 0px; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;">
    <h4>Informe Registrado</h4>
    <p>Nuevo informe registrado.</p>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var modalInstance = M.Modal.init(document.getElementById('modal1'));

        var guardarBtn = document.getElementById('guardarBtn');
        guardarBtn.addEventListener('click', function () {
            modalInstance.open();
        });
    });
</script>
