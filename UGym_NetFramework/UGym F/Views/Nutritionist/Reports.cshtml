@{
    Layout = "~/Views/Shared/_Nutritionist_layout.cshtml";
}

<div class="container">
    <h2>Crear Informe</h2>
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card">
                <div class="card-content">
                    <!-- Mensaje de Informe Registrado -->
                    <div id="infoMessage" class="info-message" style="display: none;">
                        <h4>Informe Registrado</h4>
                        <p>Nuevo informe registrado.</p>
                    </div>
                    <span class="card-title">Subir Informe</span>
                    <form>
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>Seleccionar</span>
                                <input type="file" id="archivoInforme">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                        <button class="btn waves-effect waves-light" type="button" name="action" id="guardarBtn">Subir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var infoMessage = document.getElementById('infoMessage');

        var guardarBtn = document.getElementById('guardarBtn');
        guardarBtn.addEventListener('click', function () {
            infoMessage.style.display = 'block';
        });
    });
</script>
