
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Client_layout.cshtml";
}



<div class="container">
    <h2>Perfil</h2>
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title" Infromación Personal></span>
                    <form>
                        <div class="input-field">
                            <input id="cedula" type="text" class="validate" value="111557845">
                            <label for="cedula">Cédula</label>
                        </div>
                        <div class="input-field">
                            <input id="nombre" type="text" class="validate" vlaue="José Solórzano">
                            <label for="nombre">Nombre Completo</label>
                        </div>
                        <div class="input-field">
                            <input id="fechaNacimiento" type="text" class="datepicker" value="27/02/1984">
                            <label for="fechaNacimiento">Fecha de Nacimiento</label>
                        </div>
                        <div class="input-field">
                            <select>
                                <option value="" disabled selected>Masculino</option>
                                <option value="masculino">Masculino</option>
                                <option value="femenino">Femenino</option>
                            </select>
                            <label>Género</label>
                        </div>
                        <div class="input-field">
                            <input id="ocupacion" type="text" class="validate" value="Dentista">
                            <label for="ocupacion">Ocupación</label>
                        </div>
                        <div class="input-field">
                            <input id="correo" type="email" class="validate" value="cliente@noemail.com">
                            <label for="correo">Correo Electrónico</label>
                        </div>
                        <div class="input-field">
                            <input id="direccion" type="text" class="validate" value="Ave 30, Escazú, San José, Costa Rica">
                            <label for="direccion">Dirección</label>
                        </div>
                        <div class="input-field">
                            <input id="telefono" type="tel" class="validate" value="89645545">
                            <label for="telefono">Número Telefónico</label>
                        </div>
                        <div class="input-field">
                            <input id="contactoEmergencia" type="text" class="validate" value="Fabiola">
                            <label for="contactoEmergencia">Nombre de Contacto de Emergencia</label>
                        </div>
                        <div class="input-field">
                            <input id="telefonoEmergencia" type="tel" class="validate" value="89786854">
                            <label for="telefonoEmergencia">Número de Contacto de Emergencia</label>
                        </div>
                        <div class="input-field">
                            <select>
                                <option value="Premium" disabled selected>Tipo de Membresía</option>
                                <option value="Premium">Premium</option>
                                <option value="Basica">Basica</option>
                            </select>
                            <label>Tipo de Membresía</label>
                        </div>
                        <div class="input-field">
                            <select>
                                <option value="Activa" disabled selected>Estado</option>
                                <option value="activa">Activo</option>
                                <option value="inactiva">Inactivo</option>
                            </select>
                            <label>Estado</label>
                        </div>
                        <div class="input-field">
                            <input id="fechaExpiracion" type="text" class="datepicker" value="24/08/2023">
                            <label for="fechaExpiracion">Fecha de Expiración</label>
                        </div>
                        <button class="btn waves-effect waves-light" type="button" name="action" id="guardarBtn">Guardar</button>

                    </form>
                    <br />
                    <button class="btn waves-effect waves-light" type="button" name="action">@Html.ActionLink("Cancelar", "Index", "Cliente", new { area = "" }, new { @class = "waves-effect waves-dark" })</button>
                    <button class="btn waves-effect waves-light" type="button" name="action">Membresia</button>
                    <button class="btn waves-effect waves-light" type="button" name="action">@Html.ActionLink("Regresar", "Index", "Cliente", new { area = "" }, new { @class = "waves-effect waves-light" })</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<!-- Modal -->
<div id="modal1" class="modal modal-fixed-footer" style="max-width: 15%; max-height: 15%; padding: 0px; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;">

        <h4>Información Actualizada</h4>
        <p>La información se ha actualizado correctamente.</p>

</div>


<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('.modal');
        var instances = M.Modal.init(elems);

        var guardarBtn = document.getElementById('guardarBtn');
        guardarBtn.addEventListener('click', function () {
            var modalInstance = M.Modal.getInstance(document.getElementById('modal1'));
            modalInstance.open();
        });
    });
</script>
<script>
    // Inicializar elementos de Materialize (asegúrate de tener los scripts cargados)
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);

        var datepickers = document.querySelectorAll('.datepicker');
        var options = {
            format: 'dd/mm/yyyy'
        };
        M.Datepicker.init(datepickers, options);
    });
</script>


