@{
    ViewBag.Title = "Crear Usuario";
    Layout = "~/Views/Shared/_Admin_layout.cshtml";
}
<div>
    <div class="container">
        <h2>Crear Usuario</h2>
        <form id="crearUsuarioForm">
            <div id="avisoUsuarioCreado" class="hide">
                <div class="card-panel teal lighten-2">
                    <span class="white-text">Usuario Creado</span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12 m6">
                    <select id="tipoUsuario" required>
                        <option value="" disabled selected>Seleccione un Tipo de Usuario</option>
                        <option value="Cliente">Cliente</option>
                        <option value="Entrenador">Entrenador</option>
                        <option value="Nutricionista">Nutricionista</option>
                        <option value="Recepcionista">Recepcionista</option>
                        <option value="Terapeuta">Terapeuta</option>
                    </select>
                    <label>Tipo de Usuario</label>
                </div>
            </div>
            <div class="input-field col s12 m6">
                <input id="nombre" type="text">
                <label for="nombre">Nombre</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="apellidos" type="text">
                <label for="apellidos">Apellidos</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="contrasena" type="password">
                <label for="contrasena">Contraseña</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="ocupacion" type="text">
                <label for="ocupacion">Ocupación</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="fechaNacimiento" type="text" class="datepicker">
                <label for="fechaNacimiento">Fecha de Nacimiento</label>
            </div>
            <div class="input-field col s12 m6">
                <select id="genero">
                    <option value="" disabled selected>Seleccione un Género</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="Otro">Otro</option>
                </select>
                <label>Género</label>
            </div>
            <div class="input-field col s12">
                <input id="direccion" type="text">
                <label for="direccion">Dirección</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="telefono" type="tel">
                <label for="telefono">Número Telefónico</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="nombreContactoEmergencia" type="text">
                <label for="nombreContactoEmergencia">Nombre de Contacto de Emergencia</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="telefonoContactoEmergencia" type="tel">
                <label for="telefonoContactoEmergencia">Número de Contacto de Emergencia</label>
            </div>
            <div class="input-field col s12 m6">
                <select id="tipoMembresia">
                    <option value="" disabled selected>Seleccione un Tipo de Membresía</option>
                    <option value="Tipo1">Tipo 1</option>
                    <option value="Tipo2">Tipo 2</option>
                    <!-- Agregar más opciones de tipos de membresía aquí -->
                </select>
                <label>Tipo de Membresía</label>
            </div>
            <div class="input-field col s12 m6">
                <select id="estado">
                    <option value="" disabled selected>Seleccione un Estado</option>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
                <label>Estado</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="fechaExpiracion" type="text" class="datepicker">
                <label for="fechaExpiracion">Fecha de Expiración</label>
            </div>
            <div class="input-field col s12">
                <button class="btn waves-effect waves-light" idtype="submit" name="action">Guardar</button>
            </div>

        </form>
        <br />
        <br />
        @Html.ActionLink("Regresar", "Index", "Admin", new { area = "" }, new { @class = "btn waves-effect waves-light" })
    </div>
</div>
<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        M.AutoInit(); // Inicializar componentes de Materialize

        var crearUsuarioForm = document.getElementById('crearUsuarioForm');
        var avisoUsuarioCreado = document.getElementById('avisoUsuarioCreado');

        crearUsuarioForm.addEventListener('submit', function (event) {
            event.preventDefault();
            avisoUsuarioCreado.classList.remove('hide'); // Mostrar el aviso

            setTimeout(function () {
                avisoUsuarioCreado.classList.add('hide'); // Ocultar el aviso después de 3 segundos
            }, 3000); // 3000 milisegundos = 3 segundos
        });
    });
</script>